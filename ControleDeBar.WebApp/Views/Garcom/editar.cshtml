@{
    var garcons = ViewBag.Garcom;

    Layout = "_Layout";
    ViewBag.Title = "Edição de Garçom";
}


<div class="row mt-3">
    <div class="col-lg-8">
        <form class="d-grid gap-4" action="/garcom/editar/@garcons.Id" method="post">
                
            <div>
                <label class="control-label fw-semibold">Nome do Garçom:</label>
                <input class="form-control" type="text" name="nome" value="@garcons.Nome" />
            </div>

            <div class="mt-2 d-grid gap-2 d-md-block">
                <button class="btn btn-primary px-5">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>

                <a class="btn btn-secondary px-5" href="/garcom/listar">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>
            </div>
        </form>
    </div>
</div>