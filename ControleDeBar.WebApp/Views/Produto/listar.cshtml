
@{
    var produtos = ViewBag.Produtos;

    Layout = "_Layout";
    ViewBag.Title = "Listagem de Produtos";
}

<div class="mt-3">
    <a class="btn btn-primary px-4" href="/produto/inserir">
        <i class="bi bi-plus-circle me-1 align-items-center"></i>
        Inserir Novo Produto
    </a>
</div>

<div class="row mt-3 gap-3 p-2">
    @foreach (var produto in produtos)
    {
        <div class="card col-lg-4 col-xl-3">
            <div class="card-body ">
                <div class="row row-cols-2">
                    <label class="card-title fs-5 fw-semibold">Produto: @produto.Nome</label>
                    <div class="text-end">
                        <a class="btn btn-secondary btn-sm" href="/produto/detalhes/@produto.Id">
                            <i class="bi bi-search"></i>
                        </a>

                        <a class="btn btn-primary btn-sm" href="/produto/editar/@produto.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-danger btn-sm" href="/produto/excluir/@produto.Id">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </div>
                
                @*<label class="card-title fs-5 fw--semibold">@produto.Nome</label>*@

                <p class="card-subtitle fs-6 "><strong>Id:</strong>[@produto.Id]</p>
                <p class="card-subtitle fs-6 "><strong>Valor:</strong>[@produto.Valor]</p>
            </div>
        </div>
    }
</div>
